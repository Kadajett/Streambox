{
  "$schema": "https://turbo.build/schema.json",

  "tasks": {
    "db:generate": {
      "cache": true,
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["src/generated/**"]
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputLogs": "full"
    },
    "typecheck": {
      "dependsOn": ["^db:generate", "^build"]
    },
    "lint": {
      "dependsOn": ["^db:generate", "^build"]
    },
    "lint:fix": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "format:check": {},
    "check": {
      "dependsOn": ["^db:generate", "^build"]
    },
    "test": {}
  }
}
